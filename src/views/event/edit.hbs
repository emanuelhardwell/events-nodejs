<div class="container mt-3">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header bg-primary">
                    <h1 class="text-center">Update Event</h1>
                </div>
                <div class="card-body">
                    <form action="/event/edit/{{eventEdit._id}}?_method=PUT" method="post">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input disabled type="text" name="title" class="form-control"
                                value="{{eventEdit.noteid.title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" value="{{eventEdit.title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="form-control">{{eventEdit.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="date_init">Date start </label>
                            <input type="datetime-local" name="date_init" class="form-control"
                                value="{{eventEdit.date_init}}" required>
                        </div>
                        <div class="form-group">
                            <label for="date_end">Date end</label>
                            <input type="datetime-local" name="date_end" class="form-control"
                                value="{{eventEdit.date_end}}" required>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Edit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>