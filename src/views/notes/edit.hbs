<div class="container mt-3">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header bg-primary">
                    <h1 class="text-center">Add Note</h1>
                </div>
                <div class="card-body">
                    <form action="/note/edit/{{noteEdit._id}}?_method=PUT" method="post">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" value="{{noteEdit.title}}" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="form-control">{{noteEdit.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Edit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>