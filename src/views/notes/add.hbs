<div class="container mt-3">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-header bg-primary">
                    <h1 class="text-center">Add Note</h1>
                </div>
                <div class="card-body">
                    <form action="/note/add" method="post">
                        <div class="form-group">
                            <input type="text" value="{{title}}" name="title" class="form-control" placeholder="Title"
                                autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="description" value="{{description}}" class="form-control"
                                placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>